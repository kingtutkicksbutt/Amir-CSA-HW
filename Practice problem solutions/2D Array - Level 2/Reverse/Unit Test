public static int[][] reverse(int[][] arr)
{
    int[][] reversed = new int[arr.length][arr[0].length];
    
    for (int i = 0; i < arr.length; i++) {
        for (int j = 0; j < arr[i].length; j++) {
            reversed[arr.length - 1 - i][arr[i].length - 1 - j] = arr[i][j];
        }
    }
    return reversed;
}